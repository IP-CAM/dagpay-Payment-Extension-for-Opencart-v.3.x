{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="container-fluid">
    {% if error_warning %}
      <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    {% endif %}

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>

      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_dagpay_status" id="input-status" class="form-control">
                {% if payment_dagpay_status %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-enviroment_id">{{ entry_enviroment_id }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_dagpay_enviroment_id" value="{{ payment_dagpay_enviroment_id }}" placeholder="{{ entry_enviroment_id }}" id="input-enviroment_id" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-user_id">{{ entry_user_id }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_dagpay_user_id" value="{{ payment_dagpay_user_id }}" placeholder="{{ entry_user_id }}" id="input-user_id" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-user_id">{{ entry_secret }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_dagpay_secret" value="{{ payment_dagpay_secret }}" placeholder="{{ entry_secret }}" id="input-secret" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-test-mode">{{ entry_test_mode }}</label>
            <div class="col-sm-10">
              <select name="payment_dagpay_test_mode" id="input-test-mode" class="form-control">
                {% if payment_dagpay_test_mode %}
                <option value="1" selected="selected">{{ text_test_mode_on }}</option>
                <option value="0">{{ text_test_mode_off }}</option>
                {% else %}
                <option value="1">{{ text_test_mode_on }}</option>
                <option value="0" selected="selected">{{ text_test_mode_off }}</option>
                {% endif %}
              </select>

              <div class="help-block">
                {{ help_test_mode }}
              </div>
            </div>
          </div>


          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-pending-status">{{ entry_pending_status }}</label>
            <div class="col-sm-10">
              <select name="payment_dagpay_pending_status_id" id="input-pending-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_dagpay_pending_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-waiting-status">{{ entry_waiting_status }}</label>
            <div class="col-sm-10">
              <select name="payment_dagpay_waiting_status_id" id="input-waiting-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_dagpay_waiting_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-paid-status">{{ entry_paid_status }}</label>
            <div class="col-sm-10">
              <select name="payment_dagpay_paid_status_id" id="input-paid-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_dagpay_paid_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-failed-status">{{ entry_failed_status }}</label>
            <div class="col-sm-10">
              <select name="payment_dagpay_failed_status_id" id="input-failed-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_dagpay_failed_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-expired-status">{{ entry_expired_status }}</label>
            <div class="col-sm-10">
              <select name="payment_dagpay_expired_status_id" id="input-expired-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_dagpay_expired_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-canceled-status">{{ entry_canceled_status }}</label>
            <div class="col-sm-10">
              <select name="payment_dagpay_canceled_status_id" id="input-canceled-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_dagpay_canceled_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_total }}">{{ entry_total }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_dagpay_total" value="{{ payment_dagpay_total }}" placeholder="{{ entry_total }}" id="input-total" class="form-control" />
            </div>
          </div>


	         <div class="form-group">
              <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
              <div class="col-sm-10">
                  <input type="text" name="payment_dagpay_sort_order" value="{{ payment_dagpay_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
              </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
